<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ChoosePayement">


    <ImageView android:layout_width="405dp"
               android:layout_height="376dp"
               android:src="@drawable/choose_pay"
               android:id="@+id/imageView2"
               android:layout_marginStart="25dp"
               android:layout_marginTop="80dp"/>

    <ImageButton android:layout_width="120dp"
                 android:layout_height="35dp"
                 android:id="@+id/btn_nfc"
                 android:src="@drawable/btn_nfc"
                 android:layout_alignParentBottom="true"
                 android:layout_marginStart="40dp"
                 android:layout_marginBottom="60dp"
                 android:layout_alignParentStart="true"/>

    <ImageButton android:layout_width="120dp"
                 android:layout_height="35dp"
                 android:id="@+id/btn_qr"
                 android:src="@drawable/btn_qr"
                 android:layout_alignParentBottom="true"
                 android:layout_marginBottom="60dp"
                 android:layout_marginEnd="40dp"
                 android:layout_alignParentEnd="true"/>

</RelativeLayout>